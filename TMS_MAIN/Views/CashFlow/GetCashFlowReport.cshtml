<div class="container py-4">
    <h2 class="text-center mb-4">Cash Flow Report</h2>

    <!-- Filter Form -->
    <div class="card p-4 mb-4 shadow-sm" id="reportform">
        <form asp-action="GetCashFlowReport" asp-controller="CashFlow" method="get">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Start Date:</label>
                    <input type="date" name="startDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-4">
                    <label class="form-label">End Date:</label>
                    <input type="date" name="endDate" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-4">
                    <label class="form-label">Account ID:</label>
                    <input type="number" name="aid" class="form-control" value="@Model.AccountId">
                </div>
                <div class="col-md-6 mt-3">
                    <button type="submit" class="btn btn-primary  btn-sm w-30 ml-4">
                         Filter Report
                    </button>
                </div>
                <div class="col-md-6 mt-3">
                    <button type="button" onclick="printReport()" class="btn btn-info btn-sm w-30 ml-2">
                        <i class="bi bi-printer"></i> Print
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- Report Metadata -->
    <div class="mb-4">
        <p><strong>User:</strong> @treasurerName</p>
        <p><strong>Account ID:</strong> @(Model.AccountId == 0 ? "All" : Model.AccountId.ToString())</p>
        <p><strong>Period:</strong> @Model.StartDate.ToString("dd-MM-yyyy") to @Model.EndDate.ToString("dd-MM-yyyy")</p>
        <p><strong>Generated On:</strong> @Model.GeneratedDate.ToString("dd-MM-yyyy")</p>
    </div>

    <!-- Summary Card -->
    <div class="card p-3 mb-4 shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Cash Flow Summary</h5>
            <p><strong>Total Inflow:</strong> @Model.TotalInflow.ToString("C")</p>
            <p><strong>Total Outflow:</strong> @Model.TotalOutflow.ToString("C")</p>
            <p><strong>Net Cash Flow:</strong> @Model.NetCashFlow.ToString("C")</p>
        </div>
    </div>

    <!-- Transactions Table -->
    <h3 class="text-center mb-3"><strong>Transactions</strong></h3>
    <div class="table-responsive mb-4">
        <table class="table table-hover table-bordered">
            <thead class="text-dark">
                <tr>
                    <th>Transaction Date</th>
                    <th>Transaction Type</th>
                    <th>Amount</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cashFlow in Model.CashFlows)
                {
                    <tr>
                        <td>@cashFlow.TransactionDate.ToString("dd-MM-yyyy")</td>
                        <td>@cashFlow.TransactionType</td>
                        <td>@cashFlow.Amount.ToString("C")</td>
                        <td>@cashFlow.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-between flex-wrap gap-2">
        <a asp-action="DownloadCsv"
           asp-controller="CashFlow"
           asp-route-startDate="@Model.StartDate.ToString("yyyy-MM-dd")"
           asp-route-endDate="@Model.EndDate.ToString("yyyy-MM-dd")"
           asp-route-userId="@uid"
           asp-route-aid="@Model.AccountId"
           class="btn btn-success">
            <i class="bi bi-download"></i> Download CSV
        </a>

        <a class="btn btn-secondary" href="/CashFlow/CFIndex">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>
</div>

