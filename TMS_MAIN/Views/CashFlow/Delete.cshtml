@model TMS_MAIN.Models.CashFlow;
@{
    ViewData["Title"] = "Deleting Page";
}
@section Styles {
    <style>
        /* ✅ Navbar Styling */
        .navbar {
            background-color: #343a40 !important;
        }

        .navbar-brand, .nav-link {
            color: white !important;
        }

        .navbar-title {
            color: white !important;
            font-size: 1.5rem;
            margin-left: 30px;
        }

        #box {
            padding: 20px;
            margin-top: 50px; /* Space below navbar */
        }

    </style>
}

<header>

    <!-- ✅ Navbar with full width, aligned brand, and working toggle -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <!-- ✅ Brand aligned to the left -->
            <a class="navbar-brand" href="#">TMS_MAIN</a>

            <!-- ✅ Toggle button for mobile views -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- ✅ Navigation items aligned to the right -->
            <div class="collapse navbar-collapse justify-content-lg-end text-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">About Us</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Account/Login">Logout</a></li>
                </ul>

            </div>
        </div>
    </nav>
</header>
<div id="box" class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h2 class="text-center text-danger">Delete Cash Flow</h2>
                </div>
                <div class="card-body">
                    <h5 class="text-center">Are you sure you want to delete this?</h5>
                    <div class="border rounded p-3">
                        <h4 class="text-center text-secondary">Cash Flow Details</h4>
                        <dl class="row">
                            <dt class="col-sm-4">TransactionDate</dt>
                            <dd class="col-sm-8">@Model.TransactionDate.ToShortDateString()</dd>
                          
                            <dt class="col-sm-4">TransactionType</dt>
                            <dd class="col-sm-8">@Model.TransactionType</dd>

                            <dt class="col-sm-4">Amount)</dt>
                            <dd class="col-sm-8">@Model.Amount</dd>

                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8">@Model.Description</dd>                                                        
                        </dl>
                    </div>
                    <form asp-action="Delete" asp-controller="CashFlow" class="mt-3">
                        <input type="hidden" asp-for="TransactionId" />
                        <div class="text-center">
                            <input type="submit" value="Delete" class="btn btn-danger mr-2" />
                            <a asp-action="CFIndex" class="btn btn-dark ml-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
