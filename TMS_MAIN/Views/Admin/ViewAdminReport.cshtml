@model TMS_MAIN.Models.Report

@{
    ViewData["Title"] = "Report Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<br />
<br />
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Report Details</h6>
            <a asp-action="AdminReports" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Back to Reports
            </a>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Report Name
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ReportName</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-file-alt fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Generated By
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.User?.FullName</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-user fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Status
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                         @Model.Status
                                      
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header py-3 bg-primary text-white">
                            <h6 class="m-0 font-weight-bold">Report Information</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Module:</dt>
                                <dd class="col-sm-8">@Model.Module</dd>

                                <dt class="col-sm-4">Date Range:</dt>
                                <dd class="col-sm-8">@Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</dd>

                                <dt class="col-sm-4">Generated On:</dt>
                                <dd class="col-sm-8">@Model.GeneratedDate.ToString("g")</dd>


                                @if (!string.IsNullOrEmpty(Model.Parameters))
                                {
                                    <dt class="col-sm-4">Parameters:</dt>
                                    <dd class="col-sm-8">
                                        @Model.Parameters
                                    </dd>
                                }
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header py-3 bg-primary text-white">
                            <h6 class="m-0 font-weight-bold">Compliance Information</h6>
                        </div>
                        <div class="card-body">
                            @if (Model.Compliances.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Submitted By</th>
                                                <th>Date</th>
                                                <th>Notes</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var compliance in Model.Compliances)
                                            {
                                                <tr>
                                                    <td>@compliance.User?.FullName</td>
                                                    <td>@compliance.SubmissionDate.ToString("g")</td>
                                                    <td>@compliance.Notes</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">No compliance submissions for this report.</div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            @* <div class="text-center mt-4"> *@
            @*     <a href="@Url.Action("PrintReport","Admin", new { id = Model.ReportId })" *@
            @*        class="btn btn-primary" target="_blank"> *@
            @*         <i class="fas fa-print"></i> Print Report *@
            @*     </a> *@
            @* </div> *@
        </div>
    </div>
</div>