@model ReconciliationModel
@{
    ViewData["Title"] = "Reconcile";
    Layout = "~/Views/Shared/_TreasurerLayout.cshtml";
}
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=wrap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"></style>
    <link href="~/css/treasurer-dashboard.css" rel="stylesheet" />
    <style>
        .navbar {
            background-color: #343a40 !important;
        }

        .navbar-brand, .nav-link {
            color: white !important;
        }

        #box {
            padding: 20px;
            margin-top: 80px;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .card {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border: none;
            border-radius: 10px;
        }

        .card-header {
            background-color: #0d6efd;
            color: white;
            border-top-left-radius: 10px !important;
            border-top-right-radius: 10px !important;
            padding: 1rem;
        }

        .info-box {
            background-color: #f8f9fa;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 20px;
        }

            .info-box p {
                margin-bottom: 0.5rem;
                color: #6c757d;
            }

        .btn-toolbar {
            gap: 10px;
        }

        .input-group-text {
            background-color: #e9ecef;
        }

        .form-control:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        .text-danger {
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
    </style>
}
<br />
<br />

<div id="box" class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2>Bank Account Reconciliation</h2>
            @* <div class="text-white small"> *@
            @*     <p class="mb-0">Current User: @ViewBag.CurrentUser</p> *@
            @*     <p class="mb-0">Current Date and Time (UTC): @ViewBag.CurrentDateTime</p> *@
            @* </div> *@
        </div>
        <div class="card-body">
            <div class="mb-4">
                <h4>Account Details</h4>
                <p>
                    <strong>Bank:</strong> @Model.BankName<br />
                    <strong>Account Number:</strong> @Model.AccountNumber
                </p>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary()
                </div>
            }

            <form asp-action="Reconcile" asp-controller="BankAccount" method="post" enctype="multipart/form-data">
                @Html.HiddenFor(m => m.BankAccountId)
                @Html.HiddenFor(m => m.BankName)
                @Html.HiddenFor(m => m.AccountNumber)

                <div class="mb-3">
                    <label class="form-label">Bank Statement CSV</label>
                    <input type="file" class="form-control" name="bankStatement" accept=".csv" required />
                    <small class="text-muted">Please upload your bank statement in CSV format</small>
                </div>

                <div class="mb-3">
                    <label class="form-label">Internal Transactions CSV</label>
                    <input type="file" class="form-control" name="internalTransactions" accept=".csv" required />
                    <small class="text-muted">Please upload your internal transactions in CSV format</small>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check2-circle"></i> Reconcile
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Accounts
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Add client-side validation if needed
            $('form').submit(function (e) {
                var bankStatement = $('input[name="bankStatement"]').val();
                var internalTransactions = $('input[name="internalTransactions"]').val();

                if (!bankStatement || !internalTransactions) {
                    e.preventDefault();
                    alert('Please select both CSV files before submitting.');
                    return false;
                }
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/treasurer-dashboard.js"></script>
}