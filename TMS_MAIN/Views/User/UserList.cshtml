@model IEnumerable<TMS_MAIN.Models.User>
@{
    ViewBag.Title = "User List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=wrap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <link href="~/css/admin-dashboard.css" rel="stylesheet" />
    <style>
        .navbar {
            background-color: #343a40 !important;
        }

        .navbar-brand, .nav-link {
            color: white !important;
        }

        .navbar-title {
            color: white !important;
            font-size: 1.5rem;
            margin-left: 30px;
        }

        .user-list-container {
            background: #f7f9fb;
            padding: 32px 18px 24px 18px;
            margin: 80px auto 0 auto;
            max-width: 800px;
            border-radius: 14px;
            box-shadow: 0 2px 18px 0 rgba(0,0,0,0.08);
        }

        .table {
            background: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 1px 7px 0 rgba(0,0,0,0.04);
            margin-top: 18px;
            padding-bottom:200px;
        }

            .table th, .table td {
                vertical-align: middle;
                padding: 0.55rem 0.75rem;
                font-size: 1rem;
            }

            .table th {
                background: #eef2f7;
                font-weight: 600;
                color: #2a3c54;
                border-bottom: 2px solid #e4e8ef;
            }

        .table-striped > tbody > tr:nth-of-type(odd) > * {
            background-color: #f2f6fc;
        }

        h2 {
            font-size: 2rem;
            font-weight: 700;
            color: #2a3c54;
            text-align: center;
            margin-bottom: 18px;
        }
        

        .table th, .table td {
            font-size: 0.92rem;
            padding: 0.4rem 0.4rem;
        }

        }
    </style>
}
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    string adminName = HttpContextAccessor.HttpContext.Session.GetString("FullName");
    int? adminId = HttpContextAccessor.HttpContext.Session.GetInt32("UserId");
    string adminEmail = HttpContextAccessor.HttpContext.Session.GetString("Email");
    string adminPhone = HttpContextAccessor.HttpContext.Session.GetString("PhoneNumber");
    string adminAddress = HttpContextAccessor.HttpContext.Session.GetString("Address");
    string adminUsername = HttpContextAccessor.HttpContext.Session.GetString("Username");
}

<nav class="navbar navbar-expand-lg navbar-dark fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="#"><i class="fas fa-tools me-2"></i>Admin Dashboard</a>
        @if (!string.IsNullOrEmpty(adminName))
        {
            <span class="navbar-text ms-3">Welcome, @adminName</span>
        }

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-lg-end text-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/Admin/AdminDashboard"><i class="fas fa-home me-1"></i>Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/Treasurer/About"><i class="fas fa-info-circle me-1"></i>About Us</a></li>
                <li class="nav-item"><a class="nav-link" href="/Treasurer/Contact"><i class="fas fa-phone me-1"></i>Contact</a></li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user me-1"></i>Profile
                    </a>
                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown" style="min-width: 320px;">
                        <h6 class="dropdown-header"><i class="fas fa-user-shield me-2"></i>Admin Profile</h6>
                        @if (adminId.HasValue)
                        {
                            <div class="dropdown-item-text"><i class="fas fa-fingerprint me-2"></i><strong>ID:</strong> @adminId</div>
                        }
                        @if (!string.IsNullOrEmpty(adminName))
                        {
                            <div class="dropdown-item-text"><i class="fas fa-signature me-2"></i><strong>Full Name:</strong> @adminName</div>
                        }
                        @if (!string.IsNullOrEmpty(adminUsername))
                        {
                            <div class="dropdown-item-text"><i class="fas fa-user-circle me-2"></i><strong>Username:</strong> @adminUsername</div>
                        }
                        @if (!string.IsNullOrEmpty(adminEmail))
                        {
                            <div class="dropdown-item-text"><i class="fas fa-at me-2"></i><strong>Email:</strong> @adminEmail</div>
                        }
                        @if (!string.IsNullOrEmpty(adminPhone))
                        {
                            <div class="dropdown-item-text"><i class="fas fa-phone-alt me-2"></i><strong>Phone:</strong> @adminPhone</div>
                        }
                        @if (!string.IsNullOrEmpty(adminAddress))
                        {
                            <div class="dropdown-item-text"><i class="fas fa-map-marker-alt me-2"></i><strong>Address:</strong> @adminAddress</div>
                        }

                    </div>
                </li>
                <li class="nav-item"><a class="nav-link" href="/Account/Login"><i class="fas fa-sign-out-alt me-1"></i>Logout</a></li>
            </ul>
        </div>
    </div>
</nav>


<div class="user-list-container">
    <h2>User List</h2>
    <table class="table table-striped table-bordered shadow-sm">
        <thead>
            <tr>
                <th>Username</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Is Admin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Address</td>
                    <td>
                        @if (user.IsAdmin)
                        {
                            <span class="badge bg-primary">Admin</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Treasurer</span>
                        }
                    </td>
                    <td>
                        @* Delete Button Form *@
                        <form asp-controller="User" asp-action="Delete" method="post" onsubmit="return confirmDelete(this);">
                            <input type="hidden" name="id" value="@user.UserId" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                 Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div><br />


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function confirmDelete(form) {
            if (confirm("Are you sure you want to delete this user? This action cannot be undone.")) {
                return true; // Proceed with form submission
            } else {
                return false; // Cancel form submission
            }
        }
    </script>
}