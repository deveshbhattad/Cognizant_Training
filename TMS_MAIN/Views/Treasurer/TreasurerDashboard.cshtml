
@model TMS_MAIN.Models.User;
@{
    ViewData["Title"] = "Treasurer Dashboard";
    Layout = "~/Views/Shared/_TreasurerLayout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=wrap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"> @* FIX: Removed the extra '>' at the end of this line *@
    <link href="~/css/treasurer-dashboard.css" rel="stylesheet" />
    <style>
        /* Optional: Add custom CSS for margin-top if needed to push content down from fixed navbar */
        .dashboard-container {
            padding-top: 70px; /* Adjust this value if your navbar is taller/shorter */
        }

        .dashboard-card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.164);
            margin-bottom: 20px;
            padding: 20px;
        }

            .dashboard-card h3 {
                margin-top: 0;
                color: #333;
            }
    </style>
}


<!-- ✅ Main Content -->
<div class="container-fluid dashboard-container">
    <div class="welcome-section">
        <h1>Treasury Management System</h1>
        <p>Comprehensive financial oversight and strategic treasury management</p>
    </div>

    <div class="row stats-row">
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="stat-card">
                <div class="stat-number">$2.4M</div>
                <div class="stat-label">Total Assets</div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="stat-card">
                <div class="stat-number">15</div>
                <div class="stat-label">Active Accounts</div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="stat-card">
                <div class="stat-number">98.5%</div>
                <div class="stat-label">Compliance Rate</div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="stat-card">
                <div class="stat-number">+12.3%</div>
                <div class="stat-label">Monthly Growth</div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 col-md-6">
            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-money-bill-wave"></i>
                </div>
                <h3>Cashflow Management</h3>
                <p>Monitor real-time cash inflows and outflows with advanced analytics and forecasting capabilities.</p>
                <a href="@Url.Action("CFIndex", "CashFlow")" class="btn-enhanced">Manage Cashflow</a>
            </div>
        </div>
        <div class="col-lg-6 col-md-6">
            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h3>Investment Portfolio</h3>
                <p>Track investment performance, analyze returns, and optimize portfolio allocation strategies.</p>
                <a href="@Url.Action("Index", "Investment")" class="btn-enhanced">Manage Investment</a>
            </div>
        </div>
        <div class="col-lg-6 col-md-6">
            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-university"></i>
                </div>
                <h3>Bank Account Management</h3>
                <p>Centralized account monitoring, transaction tracking, and automated reconciliation processes.</p>
                <a href="@Url.Action("Index", "BankAccount")" class="btn-enhanced">Manage Bank Account</a>
            </div>
        </div>
        <div class="col-lg-6 col-md-6">
            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3>Risk Management</h3>
                <p>Comprehensive risk assessment tools and mitigation strategies for financial security.</p>
                <a href="@Url.Action("RMIndex", "RiskManagement")" class="btn-enhanced">Assess Risks</a>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-chart-bar"></i>
                </div>
                <h3>Reports & Compliance</h3>
                <p>Generate detailed financial reports, ensure regulatory compliance, and maintain audit trails for all transactions.</p>
                <a href="@Url.Action("Index", "Reports")" class="btn-enhanced">Report And Compliance</a>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/treasurer-dashboard.js"></script>
}