@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    string treasurerName = HttpContextAccessor.HttpContext.Session.GetString("FullName");
    int? treasurerId = HttpContextAccessor.HttpContext.Session.GetInt32("UserId");
    string treasurerEmail = HttpContextAccessor.HttpContext.Session.GetString("Email");
    string treasurerPhone = HttpContextAccessor.HttpContext.Session.GetString("PhoneNumber");
    string treasurerAddress = HttpContextAccessor.HttpContext.Session.GetString("Address");
    string treasurerUsername = HttpContextAccessor.HttpContext.Session.GetString("Username");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - TMS_MAIN</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=wrap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <link href="~/css/admin-dashboard.css" rel="stylesheet" />

    @RenderSection("Styles", required: false) @* This line renders the 'Styles' section from child views *@
</head>
@* <body> *@

<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><i class="fas fa-tools me-2"></i>Treasurer Dashboard</a>
            @if (!string.IsNullOrEmpty(treasurerName))
            {
                <span class="navbar-text ms-3">Welcome, @treasurerName</span>
            }

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-lg-end text-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/Treasurer/TreasurerDashboard"><i class="fas fa-home me-1"></i>Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Treasurer/About"><i class="fas fa-info-circle me-1"></i>About Us</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Treasurer/Contact"><i class="fas fa-phone me-1"></i>Contact</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user me-1"></i>Profile
                        </a>
                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown" style="min-width: 320px;">
                            <h6 class="dropdown-header"><i class="fas fa-user-shield me-2"></i>Treasurer Profile</h6>
                            @if (treasurerId.HasValue)
                            {
                                <div class="dropdown-item-text"><i class="fas fa-fingerprint me-2"></i><strong>ID:</strong> @treasurerId</div>
                            }
                            @if (!string.IsNullOrEmpty(treasurerName))
                            {
                                <div class="dropdown-item-text"><i class="fas fa-signature me-2"></i><strong>Full Name:</strong> @treasurerName</div>
                            }
                            @if (!string.IsNullOrEmpty(treasurerUsername))
                            {
                                <div class="dropdown-item-text"><i class="fas fa-user-circle me-2"></i><strong>Username:</strong> @treasurerUsername</div>
                            }
                            @if (!string.IsNullOrEmpty(treasurerEmail))
                            {
                                <div class="dropdown-item-text"><i class="fas fa-at me-2"></i><strong>Email:</strong> @treasurerEmail</div>
                            }
                            @if (!string.IsNullOrEmpty(treasurerPhone))
                            {
                                <div class="dropdown-item-text"><i class="fas fa-phone-alt me-2"></i><strong>Phone:</strong> @treasurerPhone</div>
                            }
                            @if (!string.IsNullOrEmpty(treasurerAddress))
                            {
                                <div class="dropdown-item-text"><i class="fas fa-map-marker-alt me-2"></i><strong>Address:</strong> @treasurerAddress</div>
                            }
                            
                        </div>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="/Account/Login"><i class="fas fa-sign-out-alt me-1"></i>Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    @* <div> *@
    @*     @RenderBody() *@
    @* </div> *@

    <main class="flex-grow-1 mt-5">
        @RenderBody()
    </main>
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - TMS_MAIN. All rights reserved.
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>