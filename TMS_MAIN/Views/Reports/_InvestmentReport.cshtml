@model TMS_MAIN.ViewModels.PortfolioSummaryViewModel

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Investment Portfolio Summary</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Total Invested
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalInvested.ToString("C")</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Current Value
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalCurrentValue.ToString("C")</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Investments
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.NumberOfInvestments</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-chart-pie fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                    Net Gain/Loss
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800 @((Model.TotalCurrentValue - Model.TotalInvested) >= 0 ? "text-success" : "text-danger")">
                                    @((Model.TotalCurrentValue - Model.TotalInvested).ToString("C"))
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Investment Type</th>
                        <th>Amount Invested</th>
                        <th>Current Value</th>
                        <th>Gain/Loss</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.InvestmentBreakdown != null && Model.InvestmentBreakdown.Any())
                    {
                        @foreach (var item in Model.InvestmentBreakdown)
                        {
                            var gainLoss = item.CurrentValue - item.AmountInvested;
                            <tr>
                                <td>@item.InvestmentType</td>
                                <td>@item.AmountInvested.ToString("C")</td>
                                <td>@item.CurrentValue.ToString("C")</td>
                                <td class="@(gainLoss >= 0 ? "text-success" : "text-danger")">
                                    @gainLoss.ToString("C")
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <p class="text-warning">NO INVESTMENT DATA AVAILABLE</p>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>