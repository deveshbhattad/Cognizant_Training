@model TMS_MAIN.Models.CashFlowReportViewModel
@using TMS_MAIN.Models 


@section Styles 
{
    <style>
        @@media print {
            body {
                background-color: white;
                color: black;
                font-size: 12pt;
            }

            .card, .table {
                border: 1px solid #000 !important;
            }

            .table th, .table td {
                border: 1px solid #000 !important;
                padding: 5px;
            }

            .badge {
                border: 1px solid #000;
                color: black !important;
                background-color: white !important;
            }

            .badge-success {
                background-color: #d4edda !important;
            }

            .badge-danger {
                background-color: #f8d7da !important;
            }

            .badge-info {
                background-color: #d1ecf1 !important;
            }

            .badge-warning {
                background-color: #fff3cd !important;
            }

            .text-success {
                color: #155724 !important;
            }

            .text-danger {
                color: #721c24 !important;
            }

            button, .no-print {
                display: none !important;
            }

            .card-header {
                background-color: #f8f9fa !important;
                border-bottom: 1px solid #000 !important;
            }

            table {
                page-break-inside: auto;
            }

            tr {
                page-break-inside: avoid;
                page-break-after: auto;
            }
        }
    </style>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Cash Flow Summary</h6>
        @if (Model.AccountId > 0)
        {
            <div class="small">For Account ID: @Model.AccountId</div>
        }
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Total Inflow
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalInflow.ToString("C")</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-danger shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                    Total Outflow
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalOutflow.ToString("C")</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Net Cash Flow
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800 @(Model.NetCashFlow >= 0 ? "text-success" : "text-danger")">
                                    @Model.NetCashFlow.ToString("C")
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Amount</th>
                        <th>Description</th>
                        @* <th>Status</th>  *@
                    </tr>
                </thead>
                <tbody>
                    @if (Model.CashFlows != null && Model.CashFlows.Any())
                    {
                        @foreach (var item in Model.CashFlows)
                        {
                            <tr>
                                <td>@item.TransactionDate.ToShortDateString()</td>
                                <td>
                                        @item.TransactionType.ToString() 
                                    
                                </td>
                                <td>@item.Amount.ToString("C")</td>
                                <td>@item.Description</td>
                                @* //<td>@item.Status?.ToString()</td>// *@
                                
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No cash flow transactions found for the selected period</td> @* Updated colspan *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>