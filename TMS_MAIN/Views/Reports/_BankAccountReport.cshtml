@model TMS_MAIN.ViewModels.BankAccountReportViewModel
@using TMS_MAIN.Models

@section Styles {
    <style>
        @@media print {
            body {
                background-color: white;
                color: black;
                font-size: 12pt;
            }

            .card, .table {
                border: 1px solid #000 !important;
            }

                .table th, .table td {
                    border: 1px solid #000 !important;
                    padding: 5px;
                }

            .badge {
                border: 1px solid #000;
                color: black !important;
                background-color: white !important;
            }

            .badge-success {
                background-color: #d4edda !important;
            }

            .badge-danger {
                background-color: #f8d7da !important;
            }

            .badge-info {
                background-color: #d1ecf1 !important;
            }

            .badge-warning {
                background-color: #fff3cd !important;
            }

            .text-success {
                color: #155724 !important;
            }

            .text-danger {
                color: #721c24 !important;
            }

            button, .no-print {
                display: none !important;
            }

            .card-header {
                background-color: #f8f9fa !important;
                border-bottom: 1px solid #000 !important;
            }

            table {
                page-break-inside: auto;
            }

            tr {
                page-break-inside: avoid;
                page-break-after: auto;
            }
        }
    </style>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Bank Account Report</h6>
        @if (Model.HasData)
        {
            <div class="small">
                @Model.BankAccount.BankName - @Model.BankAccount.AccountNumber (@Model.BankAccount.AccountType)
            </div>
        }
    </div>
    <div class="card-body">
        @if (Model.HasData)
        {
            <!-- Summary Cards -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Opening Balance
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.OpeningBalance.ToString("C")</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Total Deposits
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalDeposits.ToString("C")</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-danger shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                        Total Withdrawals
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalWithdrawals.ToString("C")</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Closing Balance
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ClosingBalance.ToString("C")</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Transaction Table -->
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Amount</th>
                            <th>Description</th>
                            <th>Balance After</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            decimal runningBalance = Model.OpeningBalance;
                        }
                        @foreach (var transaction in Model.Transactions.OrderBy(t => t.TransactionDate))
                        {
                            runningBalance += transaction.TransactionType == TransactionType.Inflow ? transaction.Amount : -transaction.Amount;
                            <tr>
                                <td>@transaction.TransactionDate.ToShortDateString()</td>
                                <td>
                                   @transaction.TransactionType
                                   
                                </td>
                                <td>@transaction.Amount.ToString("C")</td>
                                <td>@transaction.Description</td>
                                <td>@runningBalance.ToString("C")</td>
                            </tr>
                        }
                        @if (!Model.Transactions.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center">No transactions found for the selected period</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning">
                <h4><i class="fas fa-exclamation-triangle"></i> No Bank Account Data Found</h4>
                <p>Could not find bank account information for the selected criteria.</p>
            </div>
        }
    </div>
</div>