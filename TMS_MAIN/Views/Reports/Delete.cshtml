@model TMS_MAIN.Models.Report

@{
    ViewData["Title"] = "Delete Report";
    Layout = "~/Views/Shared/_TreasurerLayout.cshtml";
}
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=wrap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"></style>
    <link href="~/css/treasurer-dashboard.css" rel="stylesheet" />
    <style>
        /* ✅ Navbar Styling */
        .navbar {
            background-color: #343a40 !important;
        }

        .navbar-brand, .nav-link {
            color: white !important;
        }

        .navbar-title {
            color: white !important;
            font-size: 1.5rem;
            margin-left: 30px;
        }

        #box {
            padding: 20px;
            margin-top: 150px;
            padding-left:200px;
            padding-right:200px;
        }
    </style>
}
<br /><br /><br />
<div class="container mt-4" id="box">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h4>Delete Report</h4>
        </div>
        <div class="card-body">
            <h5>Are you sure you want to delete this report?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Report Name</dt>
                <dd class="col-sm-9">@Model.ReportName</dd>

                <dt class="col-sm-3">Module</dt>
                <dd class="col-sm-9">@Model.Module</dd>

                <dt class="col-sm-3">Date Range</dt>
                <dd class="col-sm-9">@Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</dd>

                <dt class="col-sm-3">Generated On</dt>
                <dd class="col-sm-9">@Model.GeneratedDate.ToString("g")</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="ReportId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
<br />
<br />