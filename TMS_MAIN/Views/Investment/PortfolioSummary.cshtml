@model TMS_MAIN.ViewModels.PortfolioSummaryViewModel

@{
    ViewData["Title"] = "Portfolio Summary";
}

@section Styles {
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=wrap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"> @* Added for 'bi bi-arrow-left' icon *@
    <link href="~/css/treasurer-dashboard.css" rel="stylesheet" />

    
    <style>
        @@media print {
            .no-print {
                display: none;
            }
        }

        .navbar {
            background-color: #343a40 !important;
        }

        .navbar-brand, .nav-link {
            color: white !important;
        }

        .navbar-title {
            color: white !important;
            font-size: 1.5rem;
            margin-left: 30px;
        }

        #box {
            padding: 20px;
            margin-top: 50px;
        }
    </style>
}

<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">TMS_MAIN</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-lg-end text-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">About Us</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Account/Login">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container mt-5" id="box">
    <div class="no-print text-end mb-3">
        <a asp-action="Index" class="btn btn-dark me-2">Back to List</a>
        <button class="btn btn-secondary me-2" onclick="window.print()">🖨️ Print</button>
        @* <a asp-action="PortfolioSummaryPdf" asp-controller="Investment" class="btn btn-danger" download>📄 Download PDF</a> *@
    </div>

    <div class="card shadow-lg mb-4">
        <div class="card-header text-center">
            <h2>Portfolio Summary</h2>
        </div>
        <div class="card-body">
            <h3>Summary</h3>
            <p><strong>Total Invested:</strong> @Model.TotalInvested.ToString("C")</p>
            <p><strong>Total Current Value:</strong> @Model.TotalCurrentValue.ToString("C")</p>
            <p><strong>Total Returns:</strong> @Model.TotalReturns.ToString("C")</p>

            @* <p><strong>Invested:</strong> @Model.AmountInvested.ToString("C")</p> *@
            @* <p><strong>Current:</strong> @Model.CurrentValue.ToString("C")</p> *@

            <p><strong>ROI:</strong> @Model.ROI.ToString("F2")%</p>
            <p><strong>Number of Investments:</strong> @Model.NumberOfInvestments</p>
            <p><strong>Highest Investment Value:</strong> @Model.HighestInvestmentValue.ToString("C")</p>
            <p><strong>Lowest Investment Value:</strong> @Model.LowestInvestmentValue.ToString("C")</p>
            <p><strong>Last Updated:</strong> @Model.LastUpdated.ToString("g")</p>
        </div>
    </div>

    <div class="card shadow-lg">
        <div class="card-header text-center">
            <h3>Investment Breakdown</h3>
        </div>
        <div class="card-body table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Investment Type</th>
                        <th>Amount Invested</th>
                        <th>Current Value</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var investment in Model.InvestmentBreakdown)
                    {
                        <tr>
                            <td>@investment.InvestmentType</td>
                            <td>@investment.AmountInvested.ToString("C")</td>
                            <td>@investment.CurrentValue.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/treasurer-dashboard.js"></script>
}