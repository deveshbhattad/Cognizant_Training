@model Investment

@{
    ViewData["Title"] = "Delete Investment";
    Layout = "~/Views/Shared/_TreasurerLayout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=wrap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"> @* Added for 'bi bi-arrow-left' icon *@
    <link href="~/css/treasurer-dashboard.css" rel="stylesheet" />

    <style>
        /* Navbar Styling from your original commented out section, made active */
        .navbar {
            background-color: #343a40 !important;
        }

        .navbar-brand, .nav-link {
            color: white !important;
        }

        .navbar-title { /* This class is not used in your current HTML but kept for reference */
            color: white !important;
            font-size: 1.5rem;
            margin-left: 30px;
        }

        #box {
            padding: 20px;
            margin-top: 300px;
            margin-bottom: 20px; /* Space below navbar */
        }
    </style>
}

<br>
<br />
<br />
<div id="box" class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h2 class="text-center text-danger">Delete Investment</h2>
                </div>
                <div class="card-body">
                    <h5 class="text-center">Are you sure you want to delete this?</h5>
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.InvestmentType)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.InvestmentType)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.AmountInvested)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.AmountInvested)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CurrentValue)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CurrentValue)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PurchaseDate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PurchaseDate)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MaturityDate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MaturityDate)</dd>
                    </dl>
                </div>
                <form asp-action="Delete" class="mt-3" onsubmit="return confirmDelete();">
                    <input type="hidden" asp-for="InvestmentId" />
                    <div class="text-center">
                        <input type="submit" value="Delete" class="btn btn-danger mr-2" />
                        <a asp-action="Index" class="btn btn-dark ml-2">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
<br />
<br />
@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this investment?");
        }
    </script>
}
