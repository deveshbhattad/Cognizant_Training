@model IEnumerable<Investment>

@{
    ViewData["Title"] = "Investment List";
    Layout = "~/Views/Shared/_TreasurerLayout.cshtml";
}


@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=wrap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"></style>
    <link href="~/css/treasurer-dashboard.css" rel="stylesheet" />
    <style>
        /* ✅ Navbar Styling */
        .navbar {
            background-color: #343a40 !important;
        }

        .navbar-brand, .nav-link {
            color: white !important;
        }

        .navbar-title {
            color: white !important;
            font-size: 1.5rem;
            margin-left: 30px;
        }

        #box {
            padding: 20px;
            margin-top: 60px;
            margin-bottom:220px;/* Space below navbar */
        }
    </style>
}


<div id="box" class="container-fluid">
    <br />
    <h2>Investment List</h2>

    <p>
        <a asp-action="AddInvestment" class="btn btn-primary">Add New Investment</a>
    </p>

    <table class="table table-responsive table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.InvestmentType)</th>
                <th>@Html.DisplayNameFor(model => model.AmountInvested)</th>
                <th>@Html.DisplayNameFor(model => model.CurrentValue)</th>
                <th>@Html.DisplayNameFor(model => model.PurchaseDate)</th>
                <th>@Html.DisplayNameFor(model => model.MaturityDate)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.InvestmentType)</td>
                    <td>@Html.DisplayFor(modelItem => item.AmountInvested)</td>
                    <td>@Html.DisplayFor(modelItem => item.CurrentValue)</td>
                    <td>@Html.DisplayFor(modelItem => item.PurchaseDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.MaturityDate)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.InvestmentId" class="btn btn-primary btn-sm mr-2">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.InvestmentId" class="btn btn-info btn-sm">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.InvestmentId" class="btn btn-danger btn-sm ml-2">Delete</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>

    <div class="row text-center">
        <div class="text-center">
            <a href="/Investment/PortfolioSummary" class="btn btn-info btn-lgv">Report</a>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/treasurer-dashboard.js"></script>
            </script>
}