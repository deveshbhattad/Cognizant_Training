@* Views/RiskManagement/AnalyzeRisk.cshtml *@
@model TMS_MAIN.Models.AnalyzeFinancialRisksViewModel;

@{
    ViewData["Title"] = "Analyze Financial Risks";
    Layout = "~/Views/Shared/_TreasurerLayout.cshtml";
}
<header>

    <!-- ✅ Navbar with full width, aligned brand, and working toggle -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <!-- ✅ Brand aligned to the left -->
            <a class="navbar-brand" href="#">TMS_MAIN</a>

            <!-- ✅ Toggle button for mobile views -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- ✅ Navigation items aligned to the right -->
            <div class="collapse navbar-collapse justify-content-lg-end text-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">About Us</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Account/Login">Logout</a></li>
                </ul>

            </div>
        </div>
    </nav>
</header>

<main class="container mt-5 pt-5">
    @* Added mt-5 pt-5 to push content below fixed navbar *@
    <h1 class="text-center my-4">Analyze Financial Risks</h1>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Search and Filter Risks</h4>
                </div>
                <div class="card-body">
                    <form method="get" asp-controller="RiskAssessment" asp-action="AnalyzeRisk">
                        @* Changed controller *@
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="RiskId" class="form-label">Risk ID:</label>
                                <input asp-for="RiskId" class="form-control" placeholder="e.g., RA001" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="RiskType" class="form-label">Risk Type:</label>
                                <input asp-for="RiskType" class="form-control" placeholder="e.g., Currency Fluctuation" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="TransactionReference" class="form-label">Transaction Reference:</label>
                                <input asp-for="TransactionReference" class="form-control" placeholder="e.g., INV12345" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="StartDate" class="form-label">Assessment Start Date:</label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="EndDate" class="form-label">Assessment End Date:</label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                            </div>
                            <div class="col-md-4 mb-3 d-flex align-items-end">
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="fas fa-search me-2"></i> Search Risks
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">Risk Assessment Results</h4>
                </div>
                <div class="card-body">
                    @if (Model.Risks != null && Model.Risks.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Risk ID</th>
                                        <th>Risk Type</th>
                                        <th>Transaction Ref</th>
                                        <th>Amount</th> @* NEW *@
                                        <th>Impact</th> @* NEW *@
                                        <th>Probability</th> @* NEW *@
                                        <th>Score</th> @* NEW *@
                                        <th>Level</th> @* NEW *@
                                        <th>Assessment Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var risk in Model.Risks)
                                    {
                                        <tr>
                                            <td>@risk.RiskId</td>
                                            <td>@risk.RiskType</td>
                                            <td>@risk.TransactionReference</td>
                                            <td>@risk.Amount</td> @* NEW *@
                                            <td>@risk.Impact</td> @* NEW *@
                                            <td>@risk.Probability</td> @* NEW *@
                                            <td>@risk.RiskScore.ToString("F2")</td> @* NEW *@
                                            <td class="risk-level-@risk.RiskLevel.ToLower()">@risk.RiskLevel</td> @* NEW *@
                                            <td>@risk.AssessmentDate.ToShortDateString()</td>
                                            <td>
                                                <a asp-action="Details" asp-controller="RiskAssessment" asp-route-id="@risk.RiskId" class="btn btn-sm btn-outline-info me-1" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-controller="RiskAssessment" asp-route-id="@risk.RiskId" class="btn btn-sm btn-outline-primary me-1" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-controller="RiskAssessment" asp-route-id="@risk.RiskId" class="btn btn-sm btn-outline-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center" role="alert">
                            No risk assessments found. Adjust your search criteria or add new assessments.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}