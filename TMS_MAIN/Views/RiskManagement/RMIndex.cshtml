@model List<TMS_MAIN.Models.Risk>
@{
    ViewData["Title"] = "Risk Management Overview";
    Layout = "~/Views/Shared/_TreasurerLayout.cshtml";
}
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=wrap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"></style>
    <link href="~/css/treasurer-dashboard.css" rel="stylesheet" />
    <style>
        /* ✅ Navbar Styling */
        .navbar {
            background-color: #343a40 !important;
        }

        .navbar-brand, .nav-link {
            color: white !important;
        }

        .navbar-title {
            color: white !important;
            font-size: 1.5rem;
            margin-left: 30px;
        }

        #box {
            padding: 20px;
            margin-top: 70px; /* Space below navbar */
        }

    </style>
}

<br />

<div id="box" class="container-fluid">
    <h1>Risk Management Overview</h1>
    <p class="text-right">
        <a asp-action="Create" asp-controller="RiskManagement" class="btn btn-success">+New</a>
    </p>
    <table class="table table-responsive table-hover">
        <thead>
            <tr>
                <th>RiskId</th>
                <th>RiskType</th>
                <th>Assessment Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.RiskId</td>
                    <td>@item.RiskType</td>
                    <td>@item.AssessmentDate</td>
                    <td>
                        <a asp-area="" asp-action="Edit" asp-controller="RiskManagement" asp-route-id="@item.RiskId" class="btn btn-primary btn-sm mr-2">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.RiskId" class="btn btn-danger btn-sm ml-2">Delete</a> |
                        <a asp-action="RiskScore" asp-controller="RiskManagement" asp-route-id="@item.RiskId" class="btn btn-success btn-sm ml-2">Risk Score</a> 
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row text-center">
        <div class="text-center">
            <a href="/RiskManagement/GetRiskManagementReport" class="btn btn-info btn-lgv">Report</a>
        </div>
    </div>
</div>
<br />
<br />
<br />
<br />
<br />
<br />
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/treasurer-dashboard.js"></script>
                </script>
}


